# Inventory Reports Generator Configuration
# Copy this file to .env and update with your settings

# Database Configuration (inherits from main backend by default)
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_DATABASE=inventory_system
DB_PORT=3306

# Reports Server Configuration
REPORTS_PORT=3002

# Export Configuration
MAX_CONCURRENT_REPORTS=3
DEFAULT_EXPORT_FORMATS=csv,pdf
MAX_FILE_AGE_DAYS=30

# PDF Generation Configuration
PDF_TIMEOUT_MS=30000
PDF_CONCURRENT_LIMIT=2

# Report Limits
MAX_TRANSACTIONS_PER_REPORT=10000
MAX_ITEMS_PER_REPORT=1000
DEFAULT_TOP_ITEMS_LIMIT=20

# Output Configuration
OUTPUT_DIR=./output
TEMPLATES_DIR=./templates

# Logging Configuration
LOG_LEVEL=info
LOG_TO_FILE=false
LOG_FILE_PATH=./logs/reports.log
